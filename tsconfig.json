{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["bun-types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/server/*"],
      "@/*": ["./src/spa/*"],
      "#/*": ["./src/lib/*"]
    },
    "strictNullChecks": true
  }
}
